

//core layout
@media ttrigger  
    body > header
        display: flex
        justify-content: center
        align-items: center
        flex-wrap: wrap
        padding: 0 padStd
        width:100%
        //border-top: 1px solid whiteAlp50
        
    body > header.fixed
        //min-height: navHeightL
        position: fixed
        z-index: 2000
        bottom: 0

    body > header.sticky
        min-height: navHeight
        position: fixed
        z-index: 5000
        padding: padXXS*0.8 0
        display: none
        background-color: white
    body > header.stickyStatic
        min-height: navHeight
        position: fixed
        z-index: 5000
        padding: padXXS*0.8 0
        background-color: white
    body > header > *
        margin-left: marStd*1.5
        margin-right: marStd*1.5
    body > header.fixed nav.navTrigger
        display: flex
        width:100%
        column-gap: 2.5em
    body > header.fixed nav.navTrigger > *
        flex: 1 1 12.5%
        text-decoration: none

    body > header.fixed nav.navTrigger > *:last-child
        text-align: right
        text-decoration: underline
        border-bottom: none !important
        font-weight: 400

    




//footer
body > footer
    background-color: brand1
    color: white
body > footer .icon
    display: inline-flex
    font-size: 1.2em
    width:25px
    height: 25px
    justify-content: center
    background: none
    padding: 0
body > footer > div
    display: flex
    flex-wrap: nowrap
    flex-direction: column
    justify-content: space-around
body > footer div > div:not(.siteCredit)
    padding: padStd*0.5 0
body > footer div.siteCredit
    position: absolute
    right: 30px
    bottom: 20px
    font-weight: 600
    font-size: 0.75em
    @media phoneRule
        position: relative
        bottom:0
        right:0
        margin: 0px auto
body > footer a i.icon
    @media phoneRule
        margin-top: 1em
        width:40px
        height: 40px
        font-size: 1.6em
        text-align: center






