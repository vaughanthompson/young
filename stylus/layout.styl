// mobile nav
.navHeight
    height: navSpacer
    @media tabletRule
        height: navHeight

#navMobile
    position: fixed
    bottom: marStd
    right: marStd
    z-index: 6000
    display: none
#navHeader
    position: fixed
    z-index: 7000
    //background-color: blackAlp50
    right:0
    //border-bottom:1px solid halfDark
    //width:100vw
    //padding-left: padM*2
    //padding-right: padM 
    display: flex
    align-items: center
    justify-content: space-between
    @media mtrigger
        left 0
        width 95vw
        padding-left: 5vw
        background-color: white
#navHeader div#mblNavControl
    display: flex 
#navHeader div#mblNavControl a .icon-ic-menu:before
    color: brand1mid
#navHeader div#mblNavControl a .icon-ic-menu.darker:before
    color: brand1
div.mblnav
    display: none;
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 6001
    background-color: white
div.mblnavContainer
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    /* The main point: */
    overflow-y: auto
    /* Optional but highly reccomended: enables momentum scrolling on iOS */
    -webkit-overflow-scrolling: touch
    //background-color: brand0
.open
    opacity: 1 !important
div.containMNav
    padding: padL padXL
div.containMNav nav
    display: flex
    flex-direction: column
div.containMNav nav a
    //padding: padM*1.5 padM 
    line-height: 150%
    font-size: 2em
    font-weight 300
    color: brand1
    text-decoration: none
    margin: 5px 0
    padding-bottom: 10px
    border-bottom: 1px solid brand1light
    text-align: center
    @media phoneRule
        font-size: 1.5em
    @media tabletRule
        padding: padM
div.containMNav a:link,
div.containMNav a:visited
    color: brand5 !important

div.containMNav h6
    font-size: 1em
    margin-top: marStd
    margin-bottom: marL

